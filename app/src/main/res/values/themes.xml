<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MazaadyTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MazaadyTask" parent="Base.Theme.MazaadyTask" />

    <style name="Theme.Mazaady.TextInputLayout.ExposedDropdownMenu" parent="TextInputLayout">

        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/white</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="hintTextAppearance">@style/Theme.Text.TextInputHint</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_arrow_down</item>
    </style>

    <style name="Theme.Mazaady.TextInputLayout" parent="TextInputLayout">

        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="hintTextAppearance">@style/Theme.Text.TextInputHint</item>
    </style>

    <style name="Theme.Text.TextInputHint" parent="">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.Text.TextInput" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAppearance">@style/Theme.Text.TextInputAppearance</item>
    </style>
    <style name="Theme.Text.TextView" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAppearance">@style/Theme.Text.TextInputAppearance</item>
    </style>

    <style name="Theme.Text.TextInputAppearance" parent="">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>